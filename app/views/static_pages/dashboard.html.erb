
<section class="chart-container">

  <h2>Energy Consumption</h2>

  <div id="consumptionChart" class="dashboard-chart-div epoch"></div>
</section>

<section class="chart-container">

  <h2>Energy Production</h2>

  <div id="productionChart" class="dashboard-chart-div epoch"></div>
</section>

<%
   consumption_sensor = get_aggregate_sensor('Energy Consumption')
   production_sensor = get_aggregate_sensor('Energy Production')
%>

<%= javascript_tag defer: 'defer' do %>

    <% if consumption_sensor %>
        createSensorLineChart("<%= consumption_sensor.uuid %>", "consumptionChart");
    <% end %>

    <% if production_sensor %>
        createSensorLineChart("<%= production_sensor.uuid %>", "productionChart");
    <% end %>
<% end %>