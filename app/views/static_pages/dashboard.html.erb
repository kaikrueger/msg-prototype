
<section class="chart-container">

  <h2>Energy Consumption</h2>

  <div id="consumptionChart" class="dashboard-chart-div epoch"></div>
</section>

<section class="chart-container">

  <h2>Energy Production</h2>

  <div id="productionChart" class="dashboard-chart-div epoch"></div>
</section>

<%
   consumptionSensor = get_aggregate_sensor('Energy Consumption')
   productionSensor = get_aggregate_sensor('Energy Production')
%>

<%= javascript_tag defer: 'defer' do %>

    <% if consumptionSensor %>
        createSensorLineChart("<%= consumptionSensor.uuid %>", "consumptionChart");
    <% end %>

    <% if productionSensor %>
        createSensorLineChart("<%= productionSensor.uuid %>", "productionChart");
    <% end %>
<% end %>