<div class="logo-div">
  <%= link_to image_tag("logo.png", alt: "mySmartGrid"), 'https://www.mysmartgrid.de' %>
</div>

<div class="center hero-unit">
  <h1><%= t('home_title') %></h1>

  <h2>
    <%= t('home_subtitle1') %><br>
    <%= t('home_subtitle2') %>
  </h2>
</div>

<div class="demo-illustration-div">
    <%= image_tag("welcome.jpg", alt: "Welcome") %>
</div>

<section class="chart-container">

  <div id="demoGauge" class="demo-chart-div"></div>

  <div class="demo-chart-description-div">

    <h1><%= t('home_title1') %></h1>
    <p><%= t('home_paragraph1') %></p>
    <p><%= t('home_paragraph2') %></p>
  </div>
</section>

<section class="chart-container">

  <div id="demoChart" class="demo-chart-div epoch"></div>

  <div class="demo-chart-description-div">

    <p><%= t('home_paragraph3') %></p>
    <p><%= t('home_paragraph4') %></p>
    <h1><%= t('home_paragraph5') %> <%= link_to 'Feedback', 'https://www.mysmartgrid.de/node/350' %>.</h1>
  </div>
</section>

<%= javascript_tag defer: 'defer' do %>

    var sensorId = "d1d1d1d1d1d1d1d1s1s1s1s1s1s1s1s1";

    createSensorGauge(sensorId, "demoGauge", "<%= t('kettle') %>", "W", 0, 600);
    createSensorLineChart(sensorId, "demoChart");
<% end %>


