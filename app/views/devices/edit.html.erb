<% provide(:title, 'Edit device') %>
<h1>Update your device</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@device) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.submit 'Save changes', class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
