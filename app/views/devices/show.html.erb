<% provide(:title, @device.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <p>
        <%= image_tag("device_type#{@device.device_type_id}.png", alt: t('title.device.single')) %>

        <%= @device.device_type.name %>
      </p>

      <h1>
        <%= @device.name %>
      </h1>

      <p>
        <br>
        <b><%= t('helpers.label.device.uuid') %>:</b> <%= @device.uuid %>
      </p>

      <p>
        <b><%= t('helpers.label.device.created') %>:</b> <%= @device.created_at %>
      </p>

      <p>
        <b><%= t('helpers.label.device.updated') %>:</b> <%= @device.updated_at %>
      </p>
    </section>
  </aside>
</div>
