<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>

              <li><%= link_to t('title.dashboard'), dashboard_path %></li>

              <% if current_user.admin? %>
                  <li><%= link_to t('title.user.all'), users_path %></li>
              <% end %>

              <li><%= link_to t('title.device.all'), devices_path %></li>

              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= t('title.account') %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t('title.profile'), current_user %></li>
                  <li><%= link_to t('title.settings'), edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to t('link.signout'), signout_path, method: 'delete' %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to t('link.home'), root_path %></li>
              <li><%= link_to t('title.signin'), signin_path %></li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= t('link.language') %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><a href="/?locale=en">
                    <%= image_tag('en-flag.png', alt: t('label.language.english')) %>&nbsp;&nbsp;
                    <%= t('label.language.english') %></a></li>
                  <li><a href="/?locale=de">
                    <%= image_tag('de-flag.png', alt: t('label.language.deutsch')) %>&nbsp;&nbsp;
                    <%= t('label.language.deutsch') %></a></li>
                </ul>
              </li>
        <% end %>
          <li><%= link_to t('title.help'), help_path %></li>
        </ul>
      </nav>
    </div>
  </div>
</header>