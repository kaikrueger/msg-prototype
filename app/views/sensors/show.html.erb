<% provide(:title, @sensor.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <p>
        <%= image_tag("device_type#{@sensor.device.device_type_id}.png", alt: 'Device') %>

        <%= @sensor.device.device_type.name %>
      </p>
      <h1>
        <%= @sensor.device.name %>
      </h1>
      <p>
        <%= image_tag("sensor_type#{@sensor.sensor_type_unit.sensor_type.id}.png", alt: 'Sensor') %>

        <%= @sensor.sensor_type_unit.sensor_type.name %>
      </p>
      <h1>
        <%= @sensor.name %>
      </h1>
      <p>
        <br>
        <b>UUID:</b> <%= @sensor.uuid %>
      </p>
      <p>
        <b>Created:</b> <%= @sensor.created_at %>
      </p>
      <p>
        <b>Updated:</b> <%= @sensor.updated_at %>
      </p>
      <p>
        <b>Unit:</b> <%= @sensor.sensor_type_unit.unit.name %>
      </p>
      <p>
        <b>Min Value:</b> <%= @sensor.min_value %>
      </p>
      <p>
        <b>Max Value:</b> <%= @sensor.max_value %>
      </p>
    </section>
  </aside>
</div>
