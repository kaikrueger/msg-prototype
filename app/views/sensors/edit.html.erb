<% provide(:title, 'Edit sensor') %>
<h1>Update your sensor</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@sensor) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :sensor_type %>
        <%= f.collection_select :sensor_type_id, ::SensorType.all, :id, :name %>

        <%= f.label :unit %>
        <%= f.collection_select :unit_id, ::Unit.all, :id, :name %>

        <%= f.label :min_value %>
        <%= f.number_field :min_value %>

        <%= f.label :max_value %>
        <%= f.number_field :max_value %>

        <%= f.submit 'Save changes', class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
