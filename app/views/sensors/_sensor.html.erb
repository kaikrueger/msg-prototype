<li>
  <div class="sensor-icon-div">
    <%= image_tag("sensor_type#{sensor.sensor_type_unit.sensor_type.id}.png", alt: 'Sensor') %>
    <%= sensor.name %>
  </div>

  <div id="gauge<%= sensor.uuid %>" class="sensor-gauge-div"></div>

  <div class="sensor-links-div">
    <%= link_to t('link.details'), sensor %> |
    <%= link_to t('link.edit'), edit_sensor_path(sensor) %> |
    <%= link_to t('link.delete'), sensor, method: :delete, data: {confirm: t('message.confirm')} %>
  </div>
</li>

<%= javascript_tag defer: 'defer' do %>
    createSensorGauge("<%= sensor.uuid %>", "gauge<%= sensor.uuid %>", null, "<%= sensor.sensor_type_unit.unit.symbol %>", <%= sensor.min_value %>, <%= sensor.max_value %>);
<% end %>